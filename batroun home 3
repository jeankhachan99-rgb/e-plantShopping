          <h2>Ready to Partner?</h2>
          <p>Clear commercial terms ‚Ä¢ Defined deliverables ‚Ä¢ Professional execution ‚Ä¢ Transparent reporting</p>
          <div class="cta" style="justify-content:center">
            <a class="btn primary" href="https://www.batrounrace.com/pages/contact">Contact Us</a>
            <a class="btn outline" href="https://www.batrounrace.com/pages/pages-sponsors-partners">Sponsors &amp; Partners</a>
          </div>
        </div>

      </section>

    </div>
  </div>

  <script>
    (function(){
      const root = document.getElementById('brMega2026');
      if(!root) return;

      /* =========================
         DATA
         ========================= */
      const hero = [
        {img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/Batroun_Race_Starting_Line.jpg?v=1767793635", alt:"Batroun Race starting line"},
        {img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/start_line_2.jpg?v=1760000932", alt:"Start line wide"},
        {img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/finish_line.jpg?v=1760001347", alt:"Finish line moment"}
      ];

      const sponsors = [
        {name:"Aquafina", site:"https://www.aquafina.com/en-US/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/AQUAFINA.jpg?v=1759775548"},
        {name:"Gatorade", site:"https://www.gatorade.com", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/GATORADE.jpg?v=1759775585"},
        {name:"XXL Energy", site:"https://www.facebook.com/XXLEnergyLB/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/XXL_ENERY.jpg?v=1759775742"},
        {name:"Whish Money", site:"https://whishmoneylebanon.com/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/Whish_MoNEY.jpg?v=1759775521"},
        {name:"Lebtivity", site:"https://www.lebtivity.com", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/lebtivity.jpg?v=1759775471"},
        {name:"Footlab", site:"#", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/FOOTLAB.jpg?v=1759775398"},
        {name:"Koura Press", site:"#", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/Koura_press_NETWORK.jpg?v=1759775324"},
        {name:"Khoury Center", site:"#", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/KHOURY_SHOPPING_CENETER.jpg?v=1759775370"},
        {name:"Merk", site:"https://merk-me.com/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/merK.jpg?v=1759775425"},
        {name:"Studio Jammal", site:"https://gobatroun.com/location/studio-jammal-s-a-r-l/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/STUDIO_JAMMAL.jpg?v=1759775659"},
        {name:"Blue Bay", site:"https://blubaybatroun.com/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/BLUE_BAY.jpg?v=1759775706"},
        {name:"Batroun Mountains", site:"http://batrounmountains.wine/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/BATROUN_MOUNTAINS.jpg?v=1760902144"}
      ];

      const spotlight = [
        {name:"Aquafina", role:"Hydration Partner", copy:"Official hydration across the course. High dwell-time stations for performance and safety.", site:"https://www.aquafina.com/en-US/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/HANG_LOOSe2.jpg?v=1760000516"},
        {name:"Gatorade", role:"Electrolyte Partner", copy:"Electrolyte support at key performance points, paired with strong content capture and reuse.", site:"https://www.gatorade.com", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/race_day.jpg?v=1760001249"},
        {name:"XXL Energy", role:"Energy Partner", copy:"Powers atmosphere, crowd moments, and finish-line celebration ‚Äî high-frequency exposure all day.", site:"https://www.facebook.com/XXLEnergyLB/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/start_line_2.jpg?v=1760000932"},
        {name:"Lebtivity", role:"Media Partner", copy:"Discovery, live coverage, recap edits, and long-tail circulation across lifestyle audiences.", site:"https://www.lebtivity.com", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/finish_line.jpg?v=1760001347"},
        {name:"Whish Money", role:"Payments Partner", copy:"Facilitates registration and on-site flow with clean tracking for performance reporting.", site:"https://whishmoneylebanon.com/", img:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/podium.jpg?v=1760000577"}
      ];

      /* =========================
         HERO SLIDESHOW BUILD + AUTOPLAY
         ========================= */
      const heroSlides = root.querySelector('#heroSlides');
      const heroDots  = root.querySelector('#heroDots');
      const heroPrev  = root.querySelector('#heroPrev');
      const heroNext  = root.querySelector('#heroNext');
      const heroWrap  = root.querySelector('#brHeroFull');

      let hi = 0, hTimer = null;
      const hAuto = true;
      const hInterval = 4200;

      function heroPaintDots(){
        if(!heroDots) return;
        [...heroDots.children].forEach((d,k)=>d.setAttribute('aria-current', k===hi));
      }
      function heroGo(n){
        const len = hero.length || 1;
        hi = (n + len) % len;
        [...heroSlides.children].forEach((s,k)=>s.classList.toggle('isOn', k===hi));
        heroPaintDots();
        heroReset();
      }
      function heroNextFn(){ heroGo(hi+1); }
      function heroPrevFn(){ heroGo(hi-1); }

      if(heroSlides && heroDots){
        heroSlides.innerHTML = '';
        heroDots.innerHTML = '';

        hero.forEach((s,idx)=>{
          const slide = document.createElement('div');
          slide.className = 'heroSlide' + (idx===0 ? ' isOn':'' );
          slide.innerHTML = `<img src="${s.img}" alt="${s.alt||''}" loading="${idx===0?'eager':'lazy'}">`;
          heroSlides.appendChild(slide);

          const dot = document.createElement('button');
          dot.className = 'heroDot';
          dot.type = 'button';
          dot.setAttribute('aria-label','Go to hero slide ' + (idx+1));
          dot.addEventListener('click',()=>heroGo(idx));
          heroDots.appendChild(dot);
        });

        heroPaintDots();

        function heroReset(){
          if(!hAuto) return;
          clearTimeout(hTimer);
          hTimer = setTimeout(heroNextFn, hInterval);
        }

        if(heroPrev) heroPrev.addEventListener('click', heroPrevFn);
        if(heroNext) heroNext.addEventListener('click', heroNextFn);

        if(heroWrap){
          heroWrap.addEventListener('mouseenter',()=>clearTimeout(hTimer));
          heroWrap.addEventListener('mouseleave',heroReset);

          let sx = 0;
          heroWrap.addEventListener('touchstart',e=>{ sx=e.touches[0].clientX; clearTimeout(hTimer); },{passive:true});
          heroWrap.addEventListener('touchend',e=>{
            const dx = e.changedTouches[0].clientX - sx;
            if(Math.abs(dx)>40){ dx<0 ? heroNextFn() : heroPrevFn(); }
            heroReset();
          },{passive:true});
        }

        heroReset();
      }

      /* =========================
         KPI COUNT (OPTIONAL)
         ========================= */
      const runOnce = (() => {
        let done=false;
        return () => {
          if(done) return; done=true;
          root.querySelectorAll('.num[data-count]').forEach(el=>{
            const target = +el.getAttribute('data-count') || 0;
            if(!target) return;
            let cur = 0;
            const step = Math.max(1, Math.ceil(target/45));
            const timer = setInterval(()=>{
              cur += step;
              if(cur >= target){ cur = target; clearInterval(timer); }
              if(target >= 1000000){
                const v = cur/1000000;
                el.textContent = (v >= 1 ? v.toFixed(v < 2 ? 1 : 0) : v.toFixed(1)) + "M+";
              } else if(target >= 1000){
                el.textContent = cur.toLocaleString() + "+";
              } else {
                el.textContent = cur.toString();
              }
            }, 22);
          });
        };
      })();

      const io = ('IntersectionObserver' in window) ? new IntersectionObserver((entries)=>{
        entries.forEach(e=>{ if(e.isIntersecting){ runOnce(); io.disconnect(); } });
      }, {threshold:0.25}) : null;
      if(io) io.observe(root); else runOnce();

      /* =========================
         BUILD LOGO WALL + BELT
         ========================= */
      const wall = root.querySelector('#brWall');
      if(wall){
        wall.innerHTML = '';
        sponsors.forEach(s=>{
          const a=document.createElement('a');
          a.className='sTile';
          a.href=s.site || '#';
          const real = s.site && s.site !== '#';
          if(real){ a.target='_blank'; a.rel='noopener'; }
          a.innerHTML = `<img src="${s.img}" alt="${s.name}" loading="lazy"><span class="sName">${s.name}</span>`;
          wall.appendChild(a);
        });
      }

      const beltTrack = root.querySelector('#brBeltTrack');
      const beltWrap  = root.querySelector('#brBelt');

      if(beltTrack && beltWrap){
        beltTrack.innerHTML = '';
        const loop = sponsors.concat(sponsors);
        loop.forEach(s=>{
          const a=document.createElement('a');
          a.className='beltTile';
          a.href=s.site || '#';
          const real = s.site && s.site !== '#';
          if(real){ a.target='_blank'; a.rel='noopener'; }
          a.innerHTML = `<img src="${s.img}" alt="${s.name}" loading="lazy">`;
          beltTrack.appendChild(a);
        });

        let pos = 0;
        const speed = 0.42;
        let raf;

        const step = () => {
          pos -= speed;
          const half = beltTrack.scrollWidth / 2;
          if(Math.abs(pos) >= half) pos = 0;
          beltTrack.style.transform = `translate3d(${pos}px,0,0)`;
          raf = requestAnimationFrame(step);
        };
        raf = requestAnimationFrame(step);

        const stop = () => cancelAnimationFrame(raf);
        const start = () => { cancelAnimationFrame(raf); raf = requestAnimationFrame(step); };

        beltWrap.addEventListener('mouseenter', stop);
        beltWrap.addEventListener('mouseleave', start);
        beltWrap.addEventListener('touchstart', stop, {passive:true});
        beltWrap.addEventListener('touchend', start, {passive:true});
      }

      /* =========================
         SPOTLIGHT BUILD + AUTOPLAY
         ========================= */
      const sTrack = root.querySelector('#spotTrack');
      const sDots  = root.querySelector('#spotDots');
      const sPrev  = root.querySelector('#spotPrev');
      const sNext  = root.querySelector('#spotNext');
      const sWrap  = root.querySelector('#brSpot');

      if(sTrack && sDots && sPrev && sNext && sWrap){
        sTrack.innerHTML = ''; sDots.innerHTML = '';

        spotlight.forEach((s,idx)=>{
          const slide=document.createElement('article');
          slide.className='spot-slide';
          slide.innerHTML = `
            <div>
              <span class="badge" style="margin-bottom:8px">${s.role}</span>
              <h2 style="margin:0 0 8px" class="headline">${s.name}</h2>
              <p class="sub">${s.copy}</p>
              <div style="display:flex;gap:8px;flex-wrap:wrap;margin-top:10px">
                <a class="miniChip" href="${s.site}" target="_blank" rel="noopener">Website ‚Üó</a>
                <a class="miniChip" href="https://www.batrounrace.com/pages/contact">Become a Partner</a>
              </div>
            </div>
            <figure class="visual"><img src="${s.img}" alt="${s.name}" loading="lazy"></figure>
          `;
          sTrack.appendChild(slide);

          const dot=document.createElement('button');
          dot.className='dot';
          dot.type='button';
          dot.setAttribute('aria-label','Go to slide ' + (idx+1));
          dot.addEventListener('click',()=>go(idx));
          sDots.appendChild(dot);
        });

        const auto = sWrap.getAttribute('data-autoplay') === 'true';
        const interval = +sWrap.getAttribute('data-interval') || 3200;
        let i=0, timer=null;

        function paintDots(){ [...sDots.children].forEach((d,k)=>d.setAttribute('aria-current', k===i)); }
        function go(n){
          const len = sTrack.children.length || 1;
          i = (n + len) % len;
          sTrack.style.transform = `translateX(-${i*100}%)`;
          paintDots();
          reset();
        }
        function next(){ go(i+1); }
        function prev(){ go(i-1); }

        sNext.addEventListener('click', next);
        sPrev.addEventListener('click', prev);

        function reset(){
          if(!auto) return;
          clearTimeout(timer);
          timer = setTimeout(next, interval);
        }

        sWrap.addEventListener('mouseenter',()=>clearTimeout(timer));
        sWrap.addEventListener('mouseleave',reset);

        let sx=0;
        sTrack.addEventListener('touchstart',e=>{ sx=e.touches[0].clientX; clearTimeout(timer); },{passive:true});
        sTrack.addEventListener('touchend',e=>{
          const dx = e.changedTouches[0].clientX - sx;
          if(Math.abs(dx)>40){ dx<0 ? next() : prev(); }
          reset();
        },{passive:true});

        go(0);
      }

      /* =========================
         HIGHLIGHTS AUTOPLAY
         ========================= */
      const hlWrap = root.querySelector('#brHighlights');
      const hlTrack = root.querySelector('#hlTrack');
      const hlPrev = root.querySelector('#hlPrev');
      const hlNext = root.querySelector('#hlNext');

      if(hlWrap && hlTrack && hlPrev && hlNext){
        const interval = +hlWrap.getAttribute('data-interval') || 3600;
        const autoplay = hlWrap.getAttribute('data-autoplay') === 'true';
        let t=null;

        const cardW = () => {
          const first = hlTrack.querySelector('.slide');
          return first ? first.getBoundingClientRect().width + 14 : 740;
        };
        const scrollByOne = (dir) => hlTrack.scrollBy({left:dir*cardW(), behavior:'smooth'});

        hlPrev.addEventListener('click',()=>{ scrollByOne(-1); reset(); });
        hlNext.addEventListener('click',()=>{ scrollByOne(1); reset(); });

        const reset = () => {
          if(!autoplay) return;
          clearTimeout(t);
          t = setTimeout(()=>{
            const max = hlTrack.scrollWidth - hlTrack.clientWidth - 5;
            if(hlTrack.scrollLeft >= max) hlTrack.scrollTo({left:0, behavior:'smooth'});
            else scrollByOne(1);
          }, interval);
        };

        hlWrap.addEventListener('mouseenter',()=>clearTimeout(t));
        hlWrap.addEventListener('mouseleave',reset);

        let sx=0;
        hlTrack.addEventListener('touchstart',e=>{ sx=e.touches[0].clientX; clearTimeout(t); },{passive:true});
        hlTrack.addEventListener('touchend',e=>{
          const dx = e.changedTouches[0].clientX - sx;
          if(Math.abs(dx) > 40) scrollByOne(dx<0 ? 1 : -1);
          reset();
        },{passive:true});

        hlTrack.addEventListener('scroll', reset, {passive:true});
        reset();
      }

      /* =========================
         TABS SMOOTH SCROLL
         ========================= */
      const tabs = root.querySelectorAll('.tab');
      tabs.forEach(t=>{
        t.addEventListener('click',()=>{
          tabs.forEach(x=>x.setAttribute('aria-selected','false'));
          t.setAttribute('aria-selected','true');
          const key = t.getAttribute('data-jump');
          const target = root.querySelector('#brCat-' + key);
          if(target) target.scrollIntoView({behavior:'smooth', block:'start'});
        });
      });

    })();
  </script>

</section>

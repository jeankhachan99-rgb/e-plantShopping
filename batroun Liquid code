  <div class="dust" aria-hidden="true"></div>

  <div class="wrap">
    <span class="ey">Official Partners 2026</span>
    <h2>Trusted Brands Behind the Race</h2>
    <p class="sub">Graphic, modern, and proudly local â€” our partners power every mile from hydration to media.</p>

    <div class="rail" data-autoplay="true" data-interval="3200">
      <div class="slides" id="spSlides"></div>
      <div class="nav">
        <div class="dots" id="spDots"></div>
        <div>
          <button class="arrow" id="spPrev" aria-label="Previous">â€¹</button>
          <button class="arrow" id="spNext" aria-label="Next">â€º</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    (function(){
      const slidesEl=document.getElementById('spSlides');
      const dotsEl=document.getElementById('spDots');
      const prev=document.getElementById('spPrev');
      const next=document.getElementById('spNext');
      const rail=document.querySelector('#sponsors-pro .rail');

      /* ===== Data ===== */
      const sponsors=[
        {name:"Aquafina",url:"https://www.aquafina.com",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/AQUAFINA.jpg?v=1759775548"},
        {name:"Gatorade",url:"https://www.gatorade.com",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/GATORADE.jpg?v=1759775585"},
        {name:"XXL Energy",url:"https://www.facebook.com/XXLEnergyLB/",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/XXL_ENERY.jpg?v=1759775742"},
        {name:"Lebtivity",url:"https://www.lebtivity.com",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/lebtivity.jpg?v=1759775471"},
        {name:"Whish Money",url:"https://www.whishmoney.com",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/Whish_MoNEY.jpg?v=1759775521"},
        {name:"Footlab",url:"#",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/FOOTLAB.jpg?v=1759775398"},
        {name:"Blue Bay",url:"#",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/BLUE_BAY.jpg?v=1759775706"},
        {name:"Studio Jammal",url:"#",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/STUDIO_JAMMAL.jpg?v=1759775659"},
        {name:"Batroun Mountains",url:"https://batrounmountains.com",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/BATROUN_MOUNTAINS.jpg?v=1759775775"},
        {name:"Merk",url:"#",logo:"https://merk-me.com//s/files/1/0770/7790/5662/files/merK.jpg?v=1759775425"},
        {name:"Khoury Shopping Center",url:"#",logo:"https://cdn.shopify.com/s/files/1/0770/7790/5662/files/KHOURY_SHOPPING_CENETER.jpg?v=1759775370"}
      ];

      /* ===== Build Slides (6 per page) ===== */
      const makeTile=(s)=>{
        const a=document.createElement('a');
        a.className='tile tilt';
        a.href=s.url; a.target='_blank'; a.rel='noopener';
        a.innerHTML=`<img class="logo" src="${s.logo}" alt="${s.name}"><span class="name">${s.name}</span>`;
        return a;
      };

      const per=6; const pages=Math.ceil(sponsors.length/per);
      for(let p=0;p<pages;p++){
        const slide=document.createElement('section');
        slide.className='slide';
        const grid=document.createElement('div');
        grid.className='grid';
        sponsors.slice(p*per,p*per+per).forEach(sp=>grid.appendChild(makeTile(sp)));
        slide.appendChild(grid);
        slidesEl.appendChild(slide);

        const d=document.createElement('button');
        d.className='dot'; d.addEventListener('click',()=>go(p));
        dotsEl.appendChild(d);
      }

      /* ===== Slider Logic ===== */
      let i=0,t,auto=rail.dataset.autoplay==='true',iv=+rail.dataset.interval||3200;
      function go(n){
        i=(n+pages)%pages;
        slidesEl.style.transform=`translateX(-${i*100}%)`;
        [...dotsEl.children].forEach((b,k)=>b.setAttribute('aria-current',k===i));
        reset();
      }
      const nextFn=()=>go(i+1), prevFn=()=>go(i-1);
      next.addEventListener('click',nextFn); prev.addEventListener('click',prevFn);

      /* swipe */
      let sx=0;
      slidesEl.addEventListener('touchstart',e=>{sx=e.touches[0].clientX},{passive:true});
      slidesEl.addEventListener('touchend',e=>{
        const dx=e.changedTouches[0].clientX-sx;
        if(Math.abs(dx)>40){ (dx<0?nextFn:prevFn)(); }
      });

      function reset(){ if(!auto) return; clearTimeout(t); t=setTimeout(nextFn,iv); }
      rail.addEventListener('mouseenter',()=>clearTimeout(t));
      rail.addEventListener('mouseleave',reset);

      go(0);

      /* ===== Subtle mouse tilt on tiles ===== */
      slidesEl.addEventListener('mousemove',e=>{
        const tiles=[...slidesEl.querySelectorAll('.tilt')];
        tiles.forEach(tile=>{
          const r=tile.getBoundingClientRect();
          const cx=r.left+r.width/2, cy=r.top+r.height/2;
          const rx=(e.clientY-cy)/r.height*8;   /* X tilt */
          const ry=-(e.clientX-cx)/r.width*10;  /* Y tilt */
          tile.style.transform=`rotateX(${rx}deg) rotateY(${ry}deg) translateY(-4px)`;
        });
      });
      slidesEl.addEventListener('mouseleave',()=>{
        slidesEl.querySelectorAll('.tilt').forEach(tile=>{
          tile.style.transform='rotateX(0) rotateY(0)';
        });
      });
    })();
  </script>
</section>
